<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1551024709-8f23befc6f87?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2625&q=80);">
  <div class="container">
    <h1 class="title">Mr. Cocktail</h1>
    <p>Open your tastebuds to new possibilities!</p>
    <p class="remove-decoration" id="main-btn"><%= link_to "Create a Cocktail", new_cocktail_path, class: "btn-yours" %></p>
  </div>
</div>

<div class="cocktail-container container">
  <div class="cocktail-card" style="background-image: linear-gradient(rgba(20,20,20, 0.4), rgba(20,20,20, 0.4)), url(https://source.unsplash.com/random/350x250)">
    <% @cocktails.each do |cocktail| %>
      <p><%= link_to cocktail.name, cocktail_path(cocktail) %></p>
    <% end %>
  </div>
</div>

